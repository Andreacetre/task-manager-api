{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": ["node"],

    /* Other Outputs */
    "sourceMap": true,

    /* Recommended Options */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
